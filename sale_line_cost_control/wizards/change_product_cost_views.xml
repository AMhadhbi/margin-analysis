<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_change_product_cost" model="ir.ui.view">
    <field name="name">Change Product Cost</field>
    <field name="model">change.product.cost</field>
    <field name="arch" type="xml">
      <form string="Change Product Cost">
        <group>
          <field name="product_id"
            readonly="context.get('product_readonly')"
            />

          <label for="standard_price"/>
          <div>
            <field name="standard_price" class="oe_inline"/>
            <field name="currency_id" class="oe_inline"/>
          </div>
        </group>
        <footer>
          <button name="confirm_cost" string="Save Cost" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record model="ir.actions.act_window" id="action_change_product_cost">
    <field name="name">Change Product Cost</field>
    <field name="res_model">change.product.cost</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
