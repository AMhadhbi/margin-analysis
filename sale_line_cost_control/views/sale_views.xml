<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_form" model="ir.ui.view">
    <field name="name">sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree/field[@name='price_total']" position="after">
        <field name="cost_missing" />
        <button type="object"
            class="btn-link oe_read_only"
            name="action_add_cost_on_product"
            groups="base.group_user"
            string="Set Cost"
            />
      </xpath>
      <xpath expr="//field[@name='order_line']/form//div[@name='discount']" position="after">
        <label for="product_standard_price"/>
        <div>
          <field name="product_standard_price" class="oe_inline" />
          <button type="object"
              class="btn-link oe_read_only oe_inline"
              name="action_add_cost_on_product"
              groups="base.group_user"
              string="Set Cost"
              />
        </div>
      </xpath>
    </field>
  </record>
</odoo>
