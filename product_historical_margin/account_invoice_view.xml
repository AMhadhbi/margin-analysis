<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_invoice_line_form" model="ir.ui.view">
      <field name="name">account.invoice.line.form</field>
      <field name="model">account.invoice.line</field>
      <field name="inherit_id" ref='account.view_invoice_line_form'/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <field name='product_id' position='attributes'>
          <attribute name="on_change">product_id_change(product_id, discount, price_unit, uos_id, quantity, name, parent.type, parent.partner_id, parent.fiscal_position, price_unit, parent.address_invoice_id, parent.currency_id, context, parent.company_id)</attribute>
        </field>
        <field name='discount' position='attributes'>
          <attribute name="on_change">onchange_discount(product_id, discount, price_unit)</attribute>
        </field>
        <field name='price_unit' position='attributes'>
          <attribute name="on_change">onchange_price_unit(product_id, discount, price_unit)</attribute>
        </field>
        <field name="company_id" position="after">
          <field name='product_cost_price' groups="account.group_account_manager" />
          <field name='margin_absolute'  groups="account.group_account_manager" />
          <field name='margin_relative'  groups="account.group_account_manager" />
        </field>
      </field>
    </record>

    <record id="view_invoice_line_tree" model="ir.ui.view">
      <field name="name">account.invoice.line.tree</field>
      <field name="model">account.invoice.line</field>
      <field name="inherit_id" ref='account.view_invoice_line_tree'/>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <field name='name' position='attributes'>
          <attribute name="on_change">product_id_change(product_id, discount, price_unit, uos_id, quantity, name, parent.type, parent.partner_id, parent.fiscal_position, price_unit, parent.address_invoice_id, parent.currency_id, context, parent.company_id)</attribute>
        </field>
        <field name='discount' position='attributes'>
          <attribute name="on_change">onchange_discount(product_id, discount, price_unit)</attribute>
        </field>
        <field name='price_unit' position='attributes'>
          <attribute name="on_change">onchange_price_unit(product_id, discount, price_unit)</attribute>
        </field>
        <field name="discount" position="after">
          <field name='product_cost_price' groups="account.group_account_manager" />
          <field name='margin_absolute' groups="account.group_account_manager" />
          <field name='margin_relative' groups="account.group_account_manager" />
        </field>
      </field>
    </record>

  </data>
</openerp>

